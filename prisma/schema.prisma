// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider              = "zod-prisma"
  output                = "./zod"
  relationModel         = true
  modelCase             = "camelCase"
  modelSuffix           = "Schema"
  useDecimalJs          = true
  prismaJsonNullability = true
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String         @id @default(cuid())
  firstName    String
  lastName     String
  role         String
  imageUrl     String?
  email        String
  phoneNumber  String?
  Subscription Subscription[]
}

model Product {
  id            String         @id @default(cuid())
  name          String
  description   String
  price         Int
  subscriptions Subscription[]
  features      Feature[]
}

model Feature {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model Subscription {
  id          String    @id @default(cuid())
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  createdDate DateTime? @default(now())
  expiredDate DateTime?
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}
